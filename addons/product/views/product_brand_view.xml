<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_brand_form_view" model="ir.ui.view">
        <field name="name">product.brand.form.view</field>
        <field name="model">product.brand</field>
        <field name="arch" type="xml">
            <form string="Brand">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <widget name="web_ribbon" text="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}" />
                        <button type="object" name="action_view_products" class="oe_stat_button" icon="fa-list">
                            <field name="product_count" widget="statinfo" string="Products" />
                        </button>
                    </div>
                    <field name="brand_image" widget="image" class="oe_avatar" />
                    <div class="oe_title">
                        <label class="oe_edit_only" for="name" string="Brand Name" />
                        <h1><field name="name" placeholder="Brand Name" /></h1>
                    </div>
                    <!--                     <field name="company_id" invisible="1" /> -->
                    <group>
                        <group>
                            <field name="sequence" />
                            <field name="active" invisible="1" />
                            <field name="cover_image" widget="image" class="oe_avatar" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Products">
                            <field name="product_ids" widget="many2many" domain="[('brand_id','=',False)]"> </field>
                        </page>
                        <page string="Description">
                            <field name="description" />
                        </page>
                        <page string="Vendors">
                            <field name="partner_ids" widget="many2many" mode="tree">
                                <tree string="Vendors" editable="bottom">
                                    <field name="name" />
                                    <field name="email" />
                                    <field name="website" />
                                    <field name="phone" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="brand_search_view" model="ir.ui.view">
        <field name="name">brand.search.view</field>
        <field name="model">product.brand</field>
        <field name="arch" type="xml">
            <search string="Brand">
                <field name="name" />
                <filter string="Archived" name="inactive" domain="[('active','=',False)]" />
            </search>
        </field>
    </record>
    <record id="brand_kanban_view" model="ir.ui.view">
        <field name="name">brand.kanban.view</field>
        <field name="model">product.brand</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id" />
                <field name="name" />
                <field name="brand_image" />
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('product.brand', 'brand_image', record.id.raw_value)" alt="Brand" />
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title"><field name="name" /></strong>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="brand_tree_view" model="ir.ui.view">
        <field name="name">brand.tree.view</field>
        <field name="model">product.brand</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle" />
                <field name="name" />
            </tree>
        </field>
    </record>
    <record id="brand_action" model="ir.actions.act_window">
        <field name="name">Product Brands</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.brand</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_id" ref="brand_tree_view" />
        <field name="search_view_id" ref="brand_search_view" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new product brand
            </p>
        </field>
    </record>
    
    <record id="product_brand_form_view2" model="ir.ui.view">
        <field name="name">product.brand.form.view</field>
        <field name="model">product.brand</field>
        <field name="arch" type="xml">
        <form string="Brand">
	        <sheet>
	            <div class="oe_button_box" name="button_box">
	                <button type="object" name="action_view_products" class="oe_stat_button" icon="fa-list" readonly="True">
	                    <field name="product_count" widget="statinfo" string="Products" readonly="True"/>
	                </button>
	            </div>
	            <field name="brand_image" widget="image" class="oe_avatar" readonly="True"/>
	            <div class="oe_title">
	                <label class="oe_edit_only" for="name" string="Brand Name" readonly="True"/>
	                <h1><field name="name" placeholder="Brand Name" readonly="True"/></h1>
	            </div>
	            <notebook>
	                <page string="Vendors">
	                    <field name="partner_ids" widget="many2many" mode="tree" domain="[('brand_id','=',False)]" readonly="True">
	                        <tree string="Vendors" editable="bottom">
	                            <field name="name" />
<!-- 	                            <field name="email" /> -->
	                            <field name="website" />
	                            <field name="phone" />
	                        </tree>
	                    </field>
	                </page>
	            </notebook>
	        </sheet>
	    </form>
        </field>
	</record>
	
	<record id="brand_action2" model="ir.actions.act_window">
        <field name="name">Product Brands</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.brand</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="product_brand_form_view2" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new product brand
            </p>
        </field>
    </record>
	
    <menuitem id="brand_menu" name="Product Brands" action="brand_action" parent="sale.product_menu_catalog" groups="base.group_user" />
</odoo>
